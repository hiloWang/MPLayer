<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordiNatorContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hhly.lawyer.widget.ArrowItemView
                android:id="@+id/sivTest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_setting_item_view"
                app:arrow_content_text="@string/login_input_phone_num"
                app:arrow_left_image_icon="@mipmap/ic_cellphone" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="512dp"
                android:gravity="center"
                android:textColor="@color/design_black_text" />
        </LinearLayout>

        <include layout="@layout/view_bottom_sheet" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>

