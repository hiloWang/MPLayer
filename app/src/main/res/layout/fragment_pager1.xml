<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hhly.lawyer.widget.ArrowItemView
        android:id="@+id/sivTest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_setting_item_view"
        app:arrow_content_text="@string/login_input_phone_num"
        app:arrow_left_image_icon="@mipmap/ic_cellphone" />

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/design_black_text"/>

</LinearLayout>

